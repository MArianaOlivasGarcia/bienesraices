


extends ../layout/admin

block styles    
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)

block contenido
    div.py-10
        h2.text-center.text-2xl.font-extrabold.my-10 Bienes
            span.font-normal Raices

        h2.text-center.text-xl.font-extrabold= namePage


        div(class="bg-white shadow py-5 px-3 rounded mx-auto max-w-4xl my-10 md:px-10")

            form( id="image"
                class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" 
                method="POST" 
                action=`/properties/add-image/${ property.id }`)

                input(type="hidden" name="_csrf" value= csrfToken)

                                
            button(id="btnAddImage" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-white mt-5 py-3" type="button") Publicar propiedad


block scripts
    script(src="/js/addImage.js")