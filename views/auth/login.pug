extends ../layout/index

block contenido
    div.py-10
        h2.text-center.text-2xl.font-extrabold.my-10 Bienes
            span.font-normal Raices
        
        h2.text-center.text-xl.font-extrabold= namePage

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg


        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/login")

                    input(type="hidden" name="_csrf" value= csrfToken)

                    div 
                        label(class="block mt-5 text-sm uppercase text-gray-500 mb-3 font-bold"
                            for="inputEmail") Correo electrónico
                        input(type="email" 
                            id="inputEmail" 
                            placeholder="Correo electrónico"
                            name="email"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")

                    div 
                        label(class="block mt-5 text-sm uppercase text-gray-500 mb-3 font-bold"
                            for="inputPassword") Contraseña
                        input(type="password" 
                            id="inputPassword" 
                            placeholder="Contraseña"
                            name="password"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")

                    div.flex.items-center.justify-between.mt-5
                        a.text-gray-500.text-xs(href="/auth/register") ¿No tienes una cuenta? Registrarme
                        a.text-gray-500.text-xs(href="/auth/forget-password") ¿Olvidaste tu contraseña?

                    div 
                        button(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-white mt-5 py-3" type="submit") Iniciar sesión