extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")


block contenido
    div(class="py-5 ")
        h1(class="text-center text-4xl font-extrabold") Ubicación en el mapa


        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar Propiedades

            div(class="w-full md:w-auto flex items-center gap-2")
                label(
                    for="inputCategories" 
                    class="text-sm w-24 uppercase text-gray-500 font-bold") Categorías
                select(
                    id="inputCategories" 
                    name="category"
                    class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow") 
                        option(value="") Selecciona una categoría
                        each category in categories     
                            option(value= category.id)= category.title



            div(class="w-full md:w-auto flex items-center gap-2")
                label(
                    for="inputPrice" 
                    class="text-sm w-24 uppercase text-gray-500 font-bold") Precios
                select(
                    id="inputPrice" 
                    name="price"
                    class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow") 
                        option(value="") Selecciona un precio
                        each price in prices     
                            option(value= price.id)= price.title


        div(id="mapaInicio" class="h-96 mt-8")


        section(class="py-5")
            h2(class="text-center text-4l font-extrabold pt-10") Casas en Venta 
            //- pre= JSON.stringify(deptos, undefined, 2)

            div(class="grid grid-cols-1 md:grid-cols-3 gap-5 mt-5")
                each property in casas 
                    include ./templates/property-card

        section(class="py-5")
            h2(class="text-center text-4l font-extrabold pt-10") Departamentos en Venta 

            div(class="grid grid-cols-1 md:grid-cols-3 gap-5 mt-5")
                each property in deptos 
                    include ./templates/property-card



block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapHome.js")